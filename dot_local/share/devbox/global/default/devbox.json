{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/main/.schema/devbox.schema.json",
  "packages": [
    "go@latest",
    "nodejs@24",
    "python@latest",
    "neovim@latest",
    "git@latest",
    "tmux@latest",
    "ghq@latest",
    "fzf@latest",
    "ripgrep@latest",
    "fd@latest",
    "bat@latest",
    "eza@latest",
    "zoxide@latest",
    "starship@latest",
    "lazygit@latest",
    "direnv@latest",
    "jq@latest",
    "yq@latest",
    "delta@latest",
    "chezmoi@latest",
    "just@latest",
    "stylua@latest",
    "shfmt@latest",
    "atuin@latest",
    "keychain@latest",
    "mise@latest",
    "pnpm@latest"
  ],
  "shell": {
    "init_hook": [
      "[ -f \"$HOME/.env.local\" ] && . \"$HOME/.env.local\"",
      "# SSH agent: use forwarded agent or start keychain on Linux",
      "if [ -z \"$SSH_AUTH_SOCK\" ] && command -v keychain >/dev/null 2>&1; then",
      "  for key in id_ed25519 id_github id_rsa; do [ -f \"$HOME/.ssh/$key\" ] && eval \"$(keychain --eval --quiet \"$key\")\"; done",
      "fi",
      "# Activate mise for runtime version management (only in supported shells)",
      "if command -v mise >/dev/null 2>&1; then",
      "  if [ -n \"$ZSH_VERSION\" ]; then eval \"$(mise activate zsh)\";",
      "  elif [ -n \"$BASH_VERSION\" ]; then eval \"$(mise activate bash)\"; fi",
      "fi"
    ]
  }
}
